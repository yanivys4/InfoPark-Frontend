                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/hours"
                            android:textColor="#000"
                            android:textSize="20dp" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/regionalSignTable"
