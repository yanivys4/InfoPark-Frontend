                            android:textColor="#000"
                            android:textSize="20dp" />

                        <Spinner
                            android:id="@+id/fromRegionalSignSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
